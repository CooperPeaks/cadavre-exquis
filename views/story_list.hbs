<div class="container-fluid">
    <div class="row">
        <div class="col-12 mb-5">
            <h1 class="text-center">Des cadavres dans le placard</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4">
            <div class="search-bar mb-3">
                <form class="d-flex flex-column" action="/story/search" method="get">
                    <div class="d-flex w-100">
                        <input class="form-control me-2" type="search" placeholder="Nom d'un auteur, titre..."
                            name="searchBar" id="searchBar">
                        <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
                    </div>
                    <select name="" id="" class="form-select mt-2 w-100">
                        <option value="">Titre</option>
                        <option value="">Genre</option>
                        <option value="">Auteur</option>
                    </select>
                </form>
            </div>

            {{#if storiesFilter}}
            {{!-- <div class="filter-block mb-3">
                <div class="filter-opts">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" value="titleRadio" id="titleRadio">
                        <label class="form-check-label" for="titleRadio">Titre</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" value="genreRadio" id="genreRadio">
                        <label class="form-check-label" for="genreRadio">Genre</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="option" value="authorRadio" id="authorRadio">
                        <label class="form-check-label" for="authorRadio">Auteur</label>
                    </div>
                </div>
            </div> --}}
            {{/if}}
        </div>

        <!-- Main content section for articles -->
        <div class="col-12 col-md-8">
            {{#if storiesFilter}}
            <div class="row me-5">
                {{#each storiesFilter}}
                <div class="col-12 mb-3 py-3 border rounded" style="background-color: #24292B;">
                    <div class="row">
                        <div class="col-2">
                            <img src="/pictures/logo145.webp" alt="" class="img-fluid">
                        </div>
                        <div class="col-10">
                            <div class="article-title">
                                <h3>
                                    <a class="title-list" href="/story/read/{{id}}">{{title}}</a>
                                </h3>
                            </div>
                            <div class="article-resume">
                                <p id="p-list"> {{content}} </p>
                            </div>
                            <div class="article-infos d-flex">
                                <p id="p-list" class="pe-3"> {{'genre.genre_name'}} </p>
                                <p id="p-list" class="pe-3"> {{'user.username'}} </p>
                                {{#if isFinished}}
                                <p id="p-list" class="pe-3">Histoire terminée</p>
                                {{else}}
                                <p id="p-list" class="pe-3">En cours</p>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}

            <div class="row me-5">
                {{#each stories}}
                <div class="col-12 mb-3 py-3 border rounded" style="background-color: #24292B;">
                    <div class="row">
                        <div class="col-2">
                            <img src="/pictures/logo145.webp" alt="" class="img-fluid">
                        </div>
                        <div class="col-10">
                            <div class="article-title">
                                <h3>
                                    <a class="title-list" href="/story/read/{{id}}">{{title}}</a>
                                </h3>
                            </div>
                            <div class="article-resume">
                                <p id="p-list"> {{content}} </p>
                            </div>
                            <div class="article-infos d-flex">
                                <p id="p-list" class="pe-3"> {{'genre.genre_name'}} </p>
                                <p id="p-list" class="pe-3"> {{'user.username'}} </p>
                                {{#if isFinished}}
                                <p id="p-list" class="pe-3">Histoire terminée</p>
                                {{else}}
                                <p id="p-list" class="pe-3">En cours</p>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script id="searchQuery" data-value="{{searchQuery}}" src="/js/search_filter.js"></script>