<div class="user-title">
    <h1>Hello {{username}} </h1>
</div>

<div class="storyList-pannel">
    <h2>History</h2>
    <div class="articles-pannel">
        {{#each stories}}
        <div class="article-title">
            <h3> {{title}} </h3>
        </div>
        <div class="article-sample">
            <div class="col-1">
                <div class="article-cover">
                    <img src="/pictures/logo145.webp" alt="">
                </div>
            </div>
            <div class="col-2">
                <div class="article-resume">
                    <h4>Incipit</h4>
                    <p> {{content}} </p>
                </div>
                <div class="article-infos">
                    <p> {{'genre.genre_name'}} </p>
                    {{#if isFinished}}
                    <p>Histoire termin√©e</p>
                    {{else}}
                    <p>Histoire en cours</p>
                    {{/if}}
                    <button><a href="/story/read/{{id}}">Read</a></button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="perso">
        <h2>Mes informations</h2>
        <div class="ac-username">
            <p>Nom d'utilisateur : </p>
            <p> {{username}} </p>
        </div>
        <div class="ac-email">
            <p>Email : </p>
            <p> {{user.email}} </p>
        </div>
        <button><a href="/user/update/{{user.id}}">Modifier mes informations</a></button>
    </div>
</div>